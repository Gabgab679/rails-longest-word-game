      <input type="text" value ="<%= params[:word] %>" name="answer" class="form-control w-75 p-2 border border-secondary rounded">
      <%# value ="<%= params[:answer] %>
      <input type="submit" value="play" class="btn btn-primary">
    </div>
  </form>
